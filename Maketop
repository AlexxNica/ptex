##! -*- perl -*-
use Kida::ToolKit::FAUtilities;
use Kida::ToolKit::PerlCommand;

# Do some general project initialization
my $flavor = Kida::Exposed::getGlobalVariable('Flavor');
project_setup(KIDA_STANDARD,$flavor);

# Initialize Global Check (1 = All Required Products Attached 0 - Failure)
$GLOBALS{Attach_Check} = 1;

# Assign to the package array the list of packages to include for this project.
my @pkgs = ( 'src/ptex' );

# Now process the package Makelets and coallesce certain targets
my $tgts = process_makelets([@pkgs], ['all','installhdr','install','doc']);

# this ensures that all installhdr's get installed
push @{ $tgts->{install} }, @{ $tgts->{installhdr} };

# Now Make the global targets and assign everything
project_cleanup($tgts);
